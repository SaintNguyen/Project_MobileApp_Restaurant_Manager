<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    >

    <ImageView
        android:layout_width="111dp"
        android:layout_height="108dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:layout_marginRight="17dp"
        android:src="@drawable/re" />

    <TextView
        android:id="@+id/txt_menu_tennv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Xin chào !!"
        android:layout_above="@+id/menu_slogan"
        android:layout_marginLeft="20dp"
        android:textSize="14sp"
        />

    <TextView
        android:id="@+id/menu_slogan"
        android:layout_width="237dp"
        android:layout_height="118dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="-30dp"
        android:text="Nhà Hàng Schwarzer Ritter"
        android:textColor="#36505d"
        android:textSize="28sp"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txt_menu_tennv"
        android:layout_alignLeft="@id/txt_menu_tennv"
        android:src="@drawable/ic_baseline_person_pin_32" />

</RelativeLayout>